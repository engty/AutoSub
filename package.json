{
  "name": "clash-autosub",
  "version": "1.4.2",
  "description": "基于 Node.js + Puppeteer 的 VPN 订阅全自动化工具。智能检测订阅API模式，首次登录后自动保存认证配置，后续更新使用纯HTTP请求实现静默后台执行（< 1秒），彻底解决动态订阅地址的手动维护负担。",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "clash-autosub": "bin/clash-autosub.js",
    "autosub": "bin/clash-autosub.js"
  },
  "scripts": {
    "dev": "tsx src/cli/index.ts",
    "build": "tsup",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "vpn",
    "subscription",
    "automation",
    "clash",
    "cli",
    "puppeteer",
    "node.js",
    "typescript"
  ],
  "author": "engty",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/engty/clash-autosub.git"
  },
  "bugs": {
    "url": "https://github.com/engty/clash-autosub/issues"
  },
  "homepage": "https://github.com/engty/clash-autosub#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.18.2",
    "axios": "^1.12.2",
    "cac": "^6.7.14",
    "chalk": "^5.6.2",
    "cli-table3": "^0.6.5",
    "crypto-js": "^4.2.0",
    "fs-extra": "^11.3.2",
    "inquirer": "^9.3.8",
    "js-yaml": "^4.1.0",
    "ora": "^8.2.0",
    "puppeteer-core": "^24.23.0"
  },
  "devDependencies": {
    "@types/crypto-js": "^4.2.2",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.9",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.19.19",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.1",
    "prettier": "^3.6.2",
    "tsup": "^8.5.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "files": [
    "dist",
    "bin",
    "README.md",
    "LICENSE"
  ]
}
